# Telegram Bot
TELEGRAM_BOT_TOKEN=

# Provider Selection (gemini o openai)
LLM_PROVIDER=gemini
EMBEDDING_PROVIDER=gemini

# Gemini API Key
GEMINI_API_KEY=

# OpenAI (opcional, para cambiar de provider)
OPENAI_API_KEY=

# Models (usar nombres correctos de Gemini)
LLM_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=models/text-embedding-004

# Embedding dimensions (768 para Gemini, 1536 para OpenAI)
EMBEDDING_DIMENSIONS=768

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pascal_db
DATABASE_URL_SYNC=postgresql+psycopg2://postgres:postgres@localhost:5432/pascal_db

# Redis
REDIS_URL=redis://localhost:6379/0

# App Config
DEBUG=true
CONVERSATION_HISTORY_LIMIT=5
SEARCH_CACHE_TTL_SECONDS=3600
